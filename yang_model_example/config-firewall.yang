module config-firewall {
    namespace "http://netgroup.ipv6.polito.it/vnf";
    prefix "firewall";
    import ietf-inet-types { 
		prefix inet; 
	} 
    description "Firewall configuration";
	augment "/interfaces/ifEntry" { 
	    when "configurationType='static'"; 
	    leaf address { 
			type inet:ip-address; 
		}
	}

	container interfaces { 
		list ifEntry { 
			key "name"; 
			leaf name { 
				type string; 
			} 
			leaf configurationType { 
				type enumeration { 
					enum dhcp; 
					enum static;
					enum not_defined;
				} 
			} 
			leaf type { 
				type enumeration { 
					enum data; 
					enum config;
					enum not_defined;
				} 
			} 
		} 
	} 
       
	container firewall {
		list policy {
			key "policy-name";
			leaf policy-name {
				type string;
			}
			leaf action {
				type enumeration {
					enum drop;
					enum allow;
				}
			}
			leaf in-interface {
				type leafref {
				 	path "/interfaces/ifEntry/name";
				}
			}
			leaf out-interface {
				type leafref {
				 	path "/interfaces/ifEntry/name";
				}
			}
			leaf source-address {
				type inet:ip-address;
			}
			leaf source-mask {
				type inet:ip-address;
			}
			leaf destination-address {
				type inet:ip-address;
			}
			leaf destination-mask {
				type inet:ip-address;
			}
			leaf protocol {
				type enumeration {
					enum tcp;
					enum udp;
					enum not_defined;
				}
			}
			leaf source-port {
				type string;
			}
			leaf destination-port {
				type string;
			}
		}
	}
 } 