{% extends "horizon/common/_modal_form.html" %}
{% load i18n %}
{% load url from future %}

{% block form_id %}configure_instance_form{% endblock %}
{% block form_action %}{% url "horizon:project:instances:configuration" instance_id %}{% endblock %}

{% block modal_id %}configure_instance_modal{% endblock %}
{% block modal-header %}{% trans "Configure Instance" %}{% endblock %}

{% block modal-body %}
<div class="left">
  <fieldset>
   {% include "horizon/common/_form_fields.html" %}
  </fieldset>
</div>
<div class="right">
  <h3>{% trans "Description" %}:</h3>
  <p>{% trans "Select the image to rebuild your instance." %}</p>
</div>
{% endblock %}

{% block modal-footer %}
  <input class="btn btn-primary pull-right" type="submit" value="{% trans "Configure Instance" %}" />
  <a href="{% url "horizon:project:instances:detail" instance_id %}" class="btn secondary cancel close">{% trans "Cancel" %}</a>
{% endblock %}
